<form class="form-horizontal">
    <h3>{{ _('Folders') }}</h3>

    <div class="control-group">
        <label class="control-label" for="settings-folderUploads">{{ _('Picture Target Folder') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoCameraDocumentation.target_folder" id="settings-target-folder">
        </div>
    </div>
    <h3>{{ _('Program constants') }}</h3>
    <div class="control-group">
        <label class="control-label" for="settings-width">{{ _('Picture width: ') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoCameraDocumentation.picture_width" id="settings-picture-width">
        </div>
        <label class="control-label" for="settings-height">{{ _('Picture height: ') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoCameraDocumentation.picture_height" id="settings-picture-height">
        </div>
        <div class="layer-buttons btn-group-toolbar row-fluid">
            <button type="button" class="btn btn-primary btn-medium span6" data-bind = "click: getImageRes">
                <span>{{ _('Get picture resolution') }}</span>
            </button>
        </div>
        <label class="control-label" for="settings-overlap">{{ _('Picture overlap: ') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoCameraDocumentation.overlap" id="settings-overlap">
        </div>
        <label class="control-label" for="settings-stitching_active">{{ _('Picture stitching: ') }}</label>
        <div class="controls">
            <input type="checkbox" name="toggleEnable" class="input-block-level" data-bind="checked: settings.plugins.OctoCameraDocumentation.stitching_active" id="settings-stitching_active">
        </div>
        <label class="control-label" for="settings-stitching_method">Stitching Method</label>
        <div class="controls">
            <select id="settings-stitching_method" data-bind="value: settings.plugins.OctoCameraDocumentation.stitching_method, options: stitching_method_values, optionsText: 'name', optionsValue: 'key'">
            </select>
        </div>
    </div>

    <h3>{{ _('Extruders') }}</h3>
    <div class="row-fluid">
        <label class="control-label" for="extruders.plastic">Plastic Extruder</label>
        <div class="controls">
            <input id="extruders.plastic" type="number" step="1" class="input-mini text-right" data-bind="value: settings.plugins.OctoCameraDocumentation.extruders.plastic">
        </div>
    </div>
    <div class="row-fluid">
        <label class="control-label" for="extruders.plastic">Conductive Extruder</label>
        <div class="controls">
            <input id="extruders.conductive" type="number" step="1" class="input-mini text-right" data-bind="value: settings.plugins.OctoCameraDocumentation.extruders.conductive">
        </div>
    </div>

    <h3>{{ _('Active') }}</h3>
    <div class="control-group">
        <label class="control-label" for="grid-options-switch-grid-gen">{{ _('Enable Camera Documentation: ') }}</label>
        <div class="controls">
            <input type="checkbox" name="toggleEnable" class="input-block-level" data-bind="checked: settings.plugins.OctoCameraDocumentation.active" id="option-toggle-active">
        </div>
    </div>
</form>
